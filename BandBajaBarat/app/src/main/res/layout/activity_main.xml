<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
              android:orientation="vertical"
                tools:context=".MainActivity"
              android:gravity="center"
    android:background="@drawable/bg1">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimary"
        android:textSize="15sp"
        android:text="Select the type of band you need for your wedding!"/>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30sp">

        <Button
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:textSize="17sp"
            android:id="@+id/open_rock"
            android:background="@drawable/round_button"
            android:gravity="center_vertical|center_horizontal"
            android:text="Rock"
            android:textColor="@color/colorPrimaryDark"
            android:onClick="scanName"
            android:textAllCaps="false"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:gravity="center">

        <Button
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:textSize="17sp"
            android:background="@drawable/round_button"
            android:gravity="center_vertical|center_horizontal"
            android:text="Pop"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/open_pop"
            android:textAllCaps="false"/>

        <Button
            android:layout_marginLeft="160sp"
            android:layout_width="70sp"
            android:id="@+id/open_jnb"
            android:layout_height="70sp"
            android:textSize="17sp"
            android:background="@drawable/round_button"
            android:gravity="center_vertical|center_horizontal"
            android:text="Jazz &amp; Blues"
            android:textColor="@color/colorPrimaryDark"
            android:textAllCaps="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <Button
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:textSize="17sp"
            android:background="@drawable/round_button"
            android:id="@+id/open_"
            android:gravity="center_vertical|center_horizontal"
            android:text="Band Baja Barat"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center">

        <Button
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:textSize="17sp"
            android:background="@drawable/round_button"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/open_steel"
            android:text="Steel Drum"
            android:textColor="@color/colorPrimaryDark"
            android:textAllCaps="false"/>

        <Button
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:textSize="17sp"
            android:background="@drawable/round_button"
            android:gravity="center_vertical|center_horizontal"
            android:text="Reggae"
            android:id="@+id/open_reggae"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="160sp"
            android:textAllCaps="false"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20sp">

        <Button
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:id="@+id/open_celtic"
            android:textSize="17sp"
            android:background="@drawable/round_button"
            android:gravity="center_vertical|center_horizontal"
            android:text="Celtic"
            android:textColor="@color/colorPrimaryDark"
            android:textAllCaps="false"/>

        <Button
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:textSize="17sp"
            android:layout_marginLeft="40sp"
            android:background="@drawable/round_button"
            android:id="@+id/open_rnb"
            android:gravity="center_vertical|center_horizontal"
            android:text="R&amp;B"
            android:textColor="@color/colorPrimaryDark"
            android:textAllCaps="false"/>


    </LinearLayout>


</LinearLayout>
